<div class="container">
<div class="pure-g">
    <div class="pure-u-1-3"></div>
    <div class="pure-u-1-3">
    <form method="POST" action="/login" class="pure-form pure-form-stacked">
            <h2>Войдите на сайт</h2>
            {{#if errorMessage}}
                        <div class="error-msg">
                            {{errorMessage}}
                        </div>
                    {{/if}}
            <fieldset class="pure-group">
                <input type="text" id="inputUsername" name="username" class="pure-input-1-4" required placeholder="Username">
                <input type="password" id="inputPassword" name="password" class="pure-input-1-4" required placeholder="Password">
            </fieldset>
            <button type="submit" class="pure-button pure-input-1 pure-button-primary">Sign in</button>
    </form>
    </div>
    <div class="pure-u-1-3"></div>
    <div class="pure-u-1-3"></div>
    <div class="pure-u-1-3"><a href="/register">Зарегистрироваться</a></div>
    <div class="pure-u-1-3"></div>
</div>
</div>